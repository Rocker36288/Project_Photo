@model Project_Photo.Areas.Videos.Models.ViewModels.VideoListViewModel

@{
    ViewData["Title"] = "影片列表";
}

@section Styles{<style>
    .video-item {
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 0.5s ease forwards;
    }
    
    @@keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .video-item:nth-child(1) { animation-delay: 0.05s; }
    .video-item:nth-child(2) { animation-delay: 0.1s; }
    .video-item:nth-child(3) { animation-delay: 0.15s; }
    .video-item:nth-child(4) { animation-delay: 0.2s; }
    .video-item:nth-child(5) { animation-delay: 0.25s; }
    
    .search-form {
        background: #f8f9fa;
        padding: 1.5rem;
        border-radius: 8px;
        margin-bottom: 1.5rem;
    }
    
    .pagination .page-link {
        transition: all 0.3s ease;
    }
    
    .pagination .page-link:hover {
        transform: translateY(-2px);
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

</style>
}




<div class="container-xl">
    <div class="page-header d-print-none">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="page-title">影片管理</h1>
            </div>
            <div class="col-auto ms-auto">
                <a asp-action="Create" class="btn btn-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                    上傳新影片
                </a>
            </div>
        </div>
    </div>

    <!-- 搜尋和篩選表單 -->
    <div class="search-form">
        <form method="get" asp-action="Index" id="searchForm">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">搜尋關鍵字</label>
                    <input type="text" name="searchTerm" id="searchTerm" class="form-control" placeholder="輸入搜尋內容..." value="@Model.SearchTerm">
                </div>
                <div class="col-md-2">
                    <label class="form-label">搜尋類型</label>
                    <select name="searchBy" id="searchBy" class="form-select">
                        <option value="title" selected="@(Model.SearchBy == "title")">影片標題</option>
                        <option value="username" selected="@(Model.SearchBy == "username")">發布者</option>
                        <option value="date" selected="@(Model.SearchBy == "date")">上傳日期</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">排序依據</label>
                    <select name="sortBy" id="sortBy" class="form-select">
                        <option value="date" selected="@(Model.SortBy == "date")">日期</option>
                        <option value="views" selected="@(Model.SortBy == "views")">觀看次數</option>
                        <option value="likes" selected="@(Model.SortBy == "likes")">按讚數</option>
                        <option value="comments" selected="@(Model.SortBy == "comments")">留言數</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">排序方式</label>
                    <select name="sortOrder" id="sortOrder" class="form-select">
                        <option value="desc" selected="@(Model.SortOrder == "desc")">降序</option>
                        <option value="asc" selected="@(Model.SortOrder == "asc")">升序</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <div class="w-100 d-flex align-items-center justify-content-center" style="height: 38px;">
                        <div class="spinner-border spinner-border-sm text-primary d-none" id="loadingSpinner" role="status">
                            <span class="visually-hidden">載入中...</span>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <!-- 顯示結果統計 -->
    @if (Model.TotalItems > 0)
    {
        <div class="alert alert-info mb-3">
            找到 <strong>@Model.TotalItems</strong> 個影片，目前顯示第 <strong>@Model.CurrentPage</strong> 頁，共 <strong>@Model.TotalPages</strong> 頁
        </div>
    }

    <!-- 影片列表 -->
    <div id="videoList">
        @if (Model.Videos.Any())
        {
            @foreach (var item in Model.Videos)
            {
                <div class="card card-sm list-group-item mb-2 video-item">
                    <div class="d-flex align-items-center">
                        <div class="me-3 position-relative" style="width: 100px; height: 56px; flex-shrink: 0;">
                            <a href="#">
                                <img class="card-img-top rounded" src="@Html.DisplayFor(modelItem => item.Video.ThumbnailUrl)" alt="影片縮圖" style="width: 100%; height: 100%; object-fit: cover;" />
                            </a>
                            <span class="badge position-absolute bottom-0 end-0 m-1 bg-dark text-white opacity-75 fs-6">
                                @(TimeSpan.FromSeconds(Convert.ToDouble(item.Video.Duration)).ToString(@"m\:ss"))
                            </span>
                        </div>

                        <div class="flex-grow-1 me-3">
                            <h4 class="h5 card-title mb-1 text-truncate">
                                <a>@Html.DisplayFor(modelItem => item.Video.Title)</a>
                            </h4>

                            <div class="text-secondary small d-flex align-items-center">
                                <span class="avatar avatar-xs me-1" style="background-image: url(/static/avatars/023m.jpg)"></span>
                                <span class="me-3">[User name]</span>

                                <span class="me-3">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-xs me-1"><path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" /><path d="M12 7v5l3 3" /></svg>
                                    @Html.DisplayFor(modelItem => item.Video.CreatedAt)
                                </span>

                                <span class="me-3">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-xs me-1"><path d="M3 12a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" /><path d="M12 7v5l3 3" /></svg>
                                    @Html.DisplayFor(modelItem => item.Video.UpdateAt)
                                </span>
                            </div>
                        </div>

                        <div class="d-flex align-items-center text-secondary small me-3 flex-shrink-0">
                            <span class="badge bg-success me-3">@Html.DisplayFor(modelItem => item.Video.ProcessStatus)</span>
                            <span class="badge bg-success me-3">@Html.DisplayFor(modelItem => item.Video.PrivacyStatus)</span>
                            <span class="badge bg-success me-3">@Html.DisplayFor(modelItem => item.Video.Resolution)</span>

                            <div class="d-flex align-items-center me-3">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-xs me-1"><path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0" /><path d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6" /></svg>
                                <span>@item.ViewCount</span>
                            </div>
                            <div class="d-flex align-items-center me-3">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-xs me-1"><path d="M7 11v8a1 1 0 0 1 -1 1h-2a1 1 0 0 1 -1 -1v-7a1 1 0 0 1 1 -1h3l3 -3l3 3v7h-6" /></svg>
                                <span>@item.LikeCount</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-xs me-1"><path d="M3 20l1.3 -3.9a9 8 0 1 1 3.4 2.9l-4.7 1" /></svg>
                                <span>@item.CommentCount</span>
                            </div>
                        </div>

                        <div class="ms-auto d-flex flex-shrink-0">
                            <a asp-action="Details" asp-route-id="@item.Video.VideoId" class="btn btn-sm btn-outline-info me-1" title="查看詳情">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-xs"><path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0" /><path d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6" /></svg>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Video.VideoId" class="btn btn-sm btn-outline-warning me-1" title="編輯">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-xs"><path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1" /><path d="M20.385 6.582a1.01 1.01 0 0 0 -4.17 -4.17l-10.4 10.4l-1.35 4.04l4.04 -1.35l10.4 -10.4l-1.35 1.35" /></svg>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Video.VideoId" class="btn btn-sm btn-outline-danger" title="刪除">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-xs"><path d="M4 7h16" /><path d="M10 11v6" /><path d="M14 11v6" /><path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" /><path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" /></svg>
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-warning">
                <h4>沒有找到符合條件的影片</h4>
                <p>請嘗試調整搜尋條件或篩選選項。</p>
            </div>
        }
    </div>

    <!-- 分頁控制 -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="分頁導航" class="mt-4">
            <ul class="pagination justify-content-center">
                <!-- 第一頁 -->
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { 
                        searchTerm = Model.SearchTerm, 
                        searchBy = Model.SearchBy, 
                        sortBy = Model.SortBy, 
                        sortOrder = Model.SortOrder, 
                        page = 1 
                    })">
                        &laquo;&laquo; 首頁
                    </a>
                </li>

                <!-- 上一頁 -->
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { 
                        searchTerm = Model.SearchTerm, 
                        searchBy = Model.SearchBy, 
                        sortBy = Model.SortBy, 
                        sortOrder = Model.SortOrder, 
                        page = Model.CurrentPage - 1 
                    })">
                        &laquo; 上一頁
                    </a>
                </li>

                <!-- 頁碼 -->
                @{
                    var startPage = Math.Max(1, Model.CurrentPage - 2);
                    var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                }

                @for (var i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { 
                            searchTerm = Model.SearchTerm, 
                            searchBy = Model.SearchBy, 
                            sortBy = Model.SortBy, 
                            sortOrder = Model.SortOrder, 
                            page = i 
                        })">
                            @i
                        </a>
                    </li>
                }

                <!-- 下一頁 -->
                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { 
                        searchTerm = Model.SearchTerm, 
                        searchBy = Model.SearchBy, 
                        sortBy = Model.SortBy, 
                        sortOrder = Model.SortOrder, 
                        page = Model.CurrentPage + 1 
                    })">
                        下一頁 &raquo;
                    </a>
                </li>

                <!-- 最後一頁 -->
                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { 
                        searchTerm = Model.SearchTerm, 
                        searchBy = Model.SearchBy, 
                        sortBy = Model.SortBy, 
                        sortOrder = Model.SortOrder, 
                        page = Model.TotalPages 
                    })">
                        末頁 &raquo;&raquo;
                    </a>
                </li>
            </ul>
        </nav>
    }
</div>

@section Scripts{
	<script>
    // 自動搜尋功能
    let searchTimeout;
    
    // 監聽搜尋框輸入
    document.getElementById('searchTerm').addEventListener('input', function() {
        clearTimeout(searchTimeout);
        showLoading();
        
        // 延遲 500ms 後執行搜尋（避免每次輸入都觸發）
        searchTimeout = setTimeout(function() {
            document.getElementById('searchForm').submit();
        }, 500);
    });
    
    // 監聽下拉選單變更
    document.getElementById('searchBy').addEventListener('change', function() {
        showLoading();
        document.getElementById('searchForm').submit();
    });
    
    document.getElementById('sortBy').addEventListener('change', function() {
        showLoading();
        document.getElementById('searchForm').submit();
    });
    
    document.getElementById('sortOrder').addEventListener('change', function() {
        showLoading();
        document.getElementById('searchForm').submit();
    });
    
    // 顯示載入動畫
    function showLoading() {
        document.getElementById('loadingSpinner').classList.remove('d-none');
    }
    
    // 平滑滾動到頂部
    document.querySelectorAll('.pagination a').forEach(link => {
        link.addEventListener('click', function(e) {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });
    });
</script>
}
