@model Project_Photo.Areas.Videos.Models.Video

@{
	ViewData["Title"] = "Video Details";
}

<h1 class="mb-4">Video Details</h1>

<div class="card shadow-sm mb-4">
	<div class="card-header bg-primary text-white">
		<h5 class="mb-0">@Model.Title</h5>
	</div>
	<div class="card-body">
		<div class="row">
			<!-- 左側縮圖/影片 -->
			<div class="col-md-4 text-center mb-3">
				@if (!string.IsNullOrEmpty(Model.VideoUrl))
				{
					<video width="100%" controls poster="@Model.ThumbnailUrl">
						<source src="@Model.VideoUrl" type="video/mp4">
						Your browser does not support the video tag.
					</video>
				}
				else if (!string.IsNullOrEmpty(Model.ThumbnailUrl))
				{
					<img src="@Model.ThumbnailUrl" class="img-fluid rounded" alt="Thumbnail">
				}
				else
				{
					<div class="text-muted">No Video / Thumbnail</div>
				}
			</div>

			<!-- 右側資料 -->
			<div class="col-md-8">
				<dl class="row">
					<dt class="col-sm-4">Channel ID</dt>
					<dd class="col-sm-8">@Model.ChannelId</dd>

					<dt class="col-sm-4">Description</dt>
					<dd class="col-sm-8">@Model.Description</dd>

					<dt class="col-sm-4">Duration</dt>
					<dd class="col-sm-8">@(TimeSpan.FromSeconds(Convert.ToDouble(@Model.Duration)).ToString(@"m\:ss"))</dd>

					<dt class="col-sm-4">Resolution</dt>
					<dd class="col-sm-8">@Model.Resolution</dd>

					<dt class="col-sm-4">File Size</dt>
					<dd class="col-sm-8">@Model.FileSize</dd>

					<dt class="col-sm-4">Process Status</dt>
					<dd class="col-sm-8">@Model.ProcessStatus</dd>

					<dt class="col-sm-4">Privacy Status</dt>
					<dd class="col-sm-8">@Model.PrivacyStatus</dd>

					<dt class="col-sm-4">Created At</dt>
					<dd class="col-sm-8">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>

					<dt class="col-sm-4">Updated At</dt>
					<dd class="col-sm-8">@Model.UpdateAt.ToString("yyyy-MM-dd HH:mm")</dd>
				</dl>

				<div class="mt-3">
					<a asp-action="Edit" asp-route-id="@Model.VideoId" class="btn btn-warning me-2">Edit</a>
					<a asp-action="Index" class="btn btn-secondary">Back to List</a>
				</div>
			</div>
		</div>
	</div>
</div>
