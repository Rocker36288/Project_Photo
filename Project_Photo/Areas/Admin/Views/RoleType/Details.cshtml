@using Project_Photo.Areas.Admin.ViewModels.Role
@model RoleTypeDetailsViewModel
@{
    ViewData["Title"] = "角色類型詳情";
}

@section Styles {
    <style>
        .info-row {
            padding: 0.75rem 0;
            border-bottom: 1px solid #e6e7e9;
        }

            .info-row:last-child {
                border-bottom: none;
            }

        .info-label {
            font-weight: 600;
            color: #1e293b;
            min-width: 120px;
        }

        .info-value {
            color: #475569;
        }

        .user-item {
            padding: 0.75rem;
            border: 1px solid #e6e7e9;
            border-radius: 0.25rem;
            margin-bottom: 0.75rem;
            transition: all 0.2s;
        }

            .user-item:hover {
                background-color: #f8f9fa;
                border-color: #cbd5e1;
            }

        .user-item-header {
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .user-item-meta {
            font-size: 0.875rem;
            color: #64748b;
        }
    </style>
}

<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <h2 class="page-title">
                    角色類型詳情
                </h2>
                <div class="text-muted mt-1">@Model.RoleName (@Model.RoleCode)</div>
            </div>
            <div class="col-auto ms-auto d-print-none">
                <div class="btn-list">
                    <a asp-action="Index" class="btn btn-secondary">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <path d="M5 12l14 0" />
                            <path d="M5 12l6 6" />
                            <path d="M5 12l6 -6" />
                        </svg>
                        返回列表
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.RoleTypeId" class="btn btn-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1" />
                            <path d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z" />
                            <path d="M16 5l3 3" />
                        </svg>
                        編輯
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.RoleTypeId" class="btn btn-danger">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <line x1="4" y1="7" x2="20" y2="7" />
                            <line x1="10" y1="11" x2="10" y2="17" />
                            <line x1="14" y1="11" x2="14" y2="17" />
                            <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
                            <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" />
                        </svg>
                        刪除
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-body">
    <div class="container-xl">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible" role="alert">
                <div class="d-flex">
                    <div>
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon alert-icon">
                            <path d="M5 12l5 5l10 -10"></path>
                        </svg>
                    </div>
                    <div>@TempData["Success"]</div>
                </div>
                <a class="btn-close" data-bs-dismiss="alert" aria-label="close"></a>
            </div>
        }

        <div class="row row-deck mb-3">
            <!-- 基本資訊 -->
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">基本資訊</h3>
                    </div>
                    <div class="card-body">
                        <div class="info-row d-flex">
                            <div class="info-label">角色ID:</div>
                            <div class="info-value flex-fill">@Model.RoleTypeId</div>
                        </div>
                        <div class="info-row d-flex">
                            <div class="info-label">角色代碼:</div>
                            <div class="info-value flex-fill">
                                <span class="badge bg-blue-lt">@Model.RoleCode</span>
                            </div>
                        </div>
                        <div class="info-row d-flex">
                            <div class="info-label">角色名稱:</div>
                            <div class="info-value flex-fill">
                                <strong>@Model.RoleName</strong>
                            </div>
                        </div>
                        <div class="info-row d-flex">
                            <div class="info-label">角色說明:</div>
                            <div class="info-value flex-fill">@(Model.RoleDescription ?? "-")</div>
                        </div>
                        <div class="info-row d-flex">
                            <div class="info-label">角色層級:</div>
                            <div class="info-value flex-fill">
                                @switch (Model.RoleLevel)
                                {
                                    case 1:
                                        <span class="badge bg-red-lt">1 - 超級管理員</span>
                                        break;
                                    case 2:
                                        <span class="badge bg-orange-lt">2 - 系統管理員</span>
                                        break;
                                    case 3:
                                        <span class="badge bg-yellow-lt">3 - 特殊角色</span>
                                        break;
                                    case 4:
                                        <span class="badge bg-cyan-lt">4 - 一般用戶</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary-lt">@Model.RoleLevel</span>
                                        break;
                                }
                            </div>
                        </div>
                        <div class="info-row d-flex">
                            <div class="info-label">所屬系統:</div>
                            <div class="info-value flex-fill">
                                @if (!string.IsNullOrEmpty(Model.SystemName))
                                {
                                    <span class="badge bg-purple-lt">@Model.SystemName</span>
                                }
                                else
                                {
                                    <span class="text-muted">無（跨系統角色）</span>
                                }
                            </div>
                        </div>
                        <div class="info-row d-flex">
                            <div class="info-label">狀態:</div>
                            <div class="info-value flex-fill">
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-green-lt">啟用中</span>
                                }
                                else
                                {
                                    <span class="badge bg-red-lt">已停用</span>
                                }
                            </div>
                        </div>
                        <div class="info-row d-flex">
                            <div class="info-label">建立時間:</div>
                            <div class="info-value flex-fill">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</div>
                        </div>
                        <div class="info-row d-flex">
                            <div class="info-label">更新時間:</div>
                            <div class="info-value flex-fill">@Model.UpdatedAt.ToString("yyyy-MM-dd HH:mm:ss")</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 統計資訊 -->
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">統計資訊</h3>
                    </div>
                    <div class="card-body d-flex flex-column justify-content-around">
                        <div class="text-center">
                            <div class="text-muted mb-2" style="font-size: 1rem;">擁有此角色的用戶</div>
                            <div class="mb-0">
                                <span class="badge bg-purple-lt" style="font-size: 2.5rem; padding: 1rem 1.75rem;">@Model.UserCount</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 擁有此角色的用戶列表 -->
        <div class="row row-cards">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">擁有此角色的用戶 (@Model.UserCount)</h3>
                    </div>
                    <div class="card-body" style="max-height: 550px; overflow-y: auto;">
                        @if (Model.Users != null && Model.Users.Any())
                        {
                            @foreach (var user in Model.Users)
                            {
                                <div class="user-item">
                                    <div class="user-item-header d-flex justify-content-between align-items-start">
                                        <div>
                                            <i class="ti ti-user me-2"></i>
                                            <strong>@user.Account</strong>
                                            @if (!string.IsNullOrEmpty(user.DisplayName))
                                            {
                                                <span class="text-muted">(@user.DisplayName)</span>
                                            }
                                        </div>
                                        <div>
                                            @if (user.IsActive)
                                            {
                                                <span class="badge bg-green-lt">啟用</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-red-lt">停用</span>
                                            }
                                        </div>
                                    </div>
                                    <div class="text-muted small mb-2">
                                        <i class="ti ti-mail me-1"></i>
                                        @user.Email
                                    </div>
                                    <div class="user-item-meta">
                                        <span class="me-3">
                                            <i class="ti ti-calendar me-1"></i>
                                            分配時間: @user.AssignedAt.ToString("yyyy-MM-dd HH:mm")
                                        </span>
                                        @if (user.ExpiredAt.HasValue)
                                        {
                                            <span>
                                                <i class="ti ti-calendar-x me-1"></i>
                                                過期時間: @user.ExpiredAt.Value.ToString("yyyy-MM-dd HH:mm")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-success">
                                                <i class="ti ti-infinity me-1"></i>
                                                永久有效
                                            </span>
                                        }
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center text-muted py-4">
                                <i class="ti ti-users-off" style="font-size: 2rem;"></i>
                                <p class="mb-0 mt-2">目前沒有用戶擁有此角色</p>
                                <p class="text-muted small">您可以在用戶管理頁面為用戶分配此角色</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
