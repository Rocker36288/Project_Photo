@using Project_Photo.Areas.Admin.ViewModels.PermissionCategory
@model IEnumerable<PermissionCategoryListViewModel>

@{
    ViewData["Title"] = "權限分類管理";
}

@section Styles {
    <style>
        .table-sort {
            background: none;
            border: none;
            padding: 0;
            cursor: pointer;
            color: inherit;
            font-weight: inherit;
        }

        .table-sort:hover {
            color: #206bc4
        }
    </style>
}

<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <h2 class="page-title">
                    權限分類管理
                </h2>
            </div>
            <div class="col-auto ms-auto d-print-none">
                <div class="btn-list">
                    <a asp-action="Create" class="btn btn-primary d-none d-sm-inline-block">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <line x1="12" y1="5" x2="12" y2="19" />
                            <line x1="5" y1="12" x2="19" y2="12" />
                        </svg>
                        新增權限分類
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-body">
    <div class="container-xl">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible" role="alert">
                <div class="d-flex">
                    <div>
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon alert-icon">
                            <path d="M5 12l5 5l10 -10"></path>
                        </svg>
                    </div>
                    <div>@TempData["Success"]</div>
                </div>
                <a class="btn-close" data-bs-dismiss="alert" aria-label="close"></a>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible" role="alert">
                <div class="d-flex">
                    <div>
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon alert-icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <circle cx="12" cy="12" r="9" />
                            <line x1="12" y1="8" x2="12" y2="12" />
                            <line x1="12" y1="16" x2="12.01" y2="16" />
                        </svg>
                    </div>
                    <div>@TempData["Error"]</div>
                </div>
                <a class="btn-close" data-bs-dismiss="alert" aria-label="close"></a>
            </div>
        }

        <div class="card">
            <div class="card-body">
                <div id="table-default" class="table-responsive">
                    <table class="table table-vcenter card-table table-striped">
                        <thead>
                            <tr>
                                <th><button class="table-sort" data-sort="sort-id">分類ID</button></th>
                                <th><button class="table-sort" data-sort="sort-code">分類代碼</button></th>
                                <th><button class="table-sort" data-sort="sort-name">分類名稱</button></th>
                                <th><button class="table-sort" data-sort="sort-description">分類說明</button></th>
                                <th><button class="table-sort" data-sort="sort-status">狀態</button></th>
                                <th><button class="table-sort" data-sort="sort-permission">功能數</button></th>
                                <th><button class="table-sort" data-sort="sort-created">建立時間</button></th>
                                <th class="w-1">操作</th>
                            </tr>
                        </thead>
                        <tbody class="table-tbody">
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var category in Model)
                                {
                                    <tr>
                                        <td class="sort-id">@category.CategoryId</td>
                                        <td class="sort-code">
                                            <span class="badge bg-cyan-lt">@category.CategoryCode</span>
                                        </td>
                                        <td class="sort-name">
                                            <strong>@category.CategoryName</strong>
                                        </td>
                                        <td class="sort-description">
                                            @(category.CategoryDescription ?? "-")
                                        </td>
                                        <td class="sort-status">
                                            @if (category.IsActive)
                                            {
                                                <span class="badge bg-green-lt">啟用中</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-red-lt">已停用</span>
                                            }
                                        </td>
                                        <td class="sort-permission">
                                            <span class="badge bg-indigo-lt">@category.PermissionCount</span>
                                        </td>
                                        <td class="sort-created" data-date="@category.CreatedAt.ToString("yyyyMMddHHmmss")">
                                            @category.CreatedAt.ToString("yyyy-MM-dd HH:mm")
                                        </td>
                                        <td>
                                            <div class="btn-list flex-nowrap">
                                                <a asp-action="Details" asp-route-id="@category.CategoryId" class="btn btn-sm btn-primary" title="查看">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                        <circle cx="12" cy="12" r="2" />
                                                        <path d="M22 12c-2.667 4.667 -6 7 -10 7s-7.333 -2.333 -10 -7c2.667 -4.667 6 -7 10 -7s7.333 2.333 10 7" />
                                                    </svg>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-sm btn-secondary" title="編輯">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                        <path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1" />
                                                        <path d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z" />
                                                        <path d="M16 5l3 3" />
                                                    </svg>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-sm btn-danger" title="刪除">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                        <line x1="4" y1="7" x2="20" y2="7" />
                                                        <line x1="10" y1="11" x2="10" y2="17" />
                                                        <line x1="14" y1="11" x2="14" y2="17" />
                                                        <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
                                                        <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" />
                                                    </svg>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center text-muted py-4">
                                        目前沒有任何權限分類資料
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/list.js@2.3.1/dist/list.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // 初始化表格排序功能
            const list = new List("table-default", {
                sortClass: "table-sort",
                listClass: "table-tbody",
                valueNames: [
                    "sort-id",
                    "sort-code",
                    "sort-name",
                    "sort-description",
                    "sort-status",
                    "sort-permission",
                    { attr: "data-date", name: "sort-created" }
                ],
            });

            // 預設按分類ID遞增排序
            list.sort("sort-id", { order: "asc" });
        });
    </script>
}